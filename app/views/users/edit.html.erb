
<% if @user.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well well-compact col-md-4 col-md-offset-4" style="margin-top: 40px;">
  <h2 style="margin-top: 10px; margin-bottom: 20px; text-align: center;"><strong>アカウント情報編集</strong></h2>
  <%= form_for @user do |f| %>
    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class:"form-control" %>
    </div>
    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :イメージ画像 %>
      <%= f.attachment_field :user_image, placeholder: "イメージ画像を選択" %>
    </div>
    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :フレンド %><strong>ID</strong><br />
      <%= f.text_field :friend_id, autofocus: true, autocomplete: "friend_id", class:"form-control" %>
    </div>
    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :Eメールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="actions" style="margin-bottom: 60px;">
      <%= f.submit "変更を保存", class:"btn btn-success col-md-12" %>
    </div>
  <% end %>
</div>

