
<% if @user.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class="well well-compact col-md-4 col-md-offset-4" style="margin-top: 100px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.7 );">
<h2 style="text-align: center; margin-bottom: 30px;"><strong>ログイン</strong></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <div class="field" style="margin-bottom: 30px;">
      <%= f.label :Eメールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 30px;">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions" style="margin-bottom: 20px;">
      <%= f.submit "ログイン", class:"btn btn-primary col-md-12" %>
    </div>
  <% end %>

</div>


