
<div class="well well-compact col-md-4 col-md-offset-4" style="margin-top: 40px;">
<h2 style="margin-top: 10px; text-align: center;"><strong>アカウント登録</strong></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :ユーザーイメージ画像 %>
      <%= f.attachment_field :user_image, placeholder: "イメージ画像を選択" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :フレンド %><strong>ID</strong><br />
      <%= f.text_field :friend_id, autofocus: true, autocomplete: "friend_id", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :Eメールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="actions" style="margin-bottom: 20px;">
      <%= f.submit "アカウント登録", class:"btn btn-primary col-md-12" %>
    </div>
  <% end %>

</div>

