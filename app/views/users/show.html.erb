                  <% end %>
                </div>
              <% end %>
            <% end %>
            <div class="" style="text-align: center; width: 100%;">
              <%= paginate @thing, class:"paginate" %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="location_and_thing">
        <div class="left col-sm-6" style="padding: 0px;">
          <div class="user_location_index" style="margin-bottom: 20px; width: 350px; margin: 0 auto;">
            <div class="thing_title" style="">
              <p style="margin-bottom: 10px; font-size: 40px; text-align: center; text-shadow: 4px 4px 4px #000000; color: #00bfff; -webkit-text-stroke: 0.2px black;"><strong>Locations</strong></p>
            </div>
            <% @location_public.each do |location| %>
              <div class="user_location" style="height: 60px; margin-bottom: 20px; box-shadow: 3px 3px 3px 3px rgba(0,0,0,0.6);">
                <%= link_to location_path(location.id), class:"" do %>
                  <div class="location_image col-xs-2" style="padding-top: 5px; padding-bottom: 5px; padding-left: 15px;">
                    <%= attachment_image_tag location, :location_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_camera_medium.jpg", size: "50x50" %>
                  </div>
                  <div class="location_name col-xs-10" style="height: 60px; padding-top: 15px; padding-bottom: 15px; padding-left: 20px; font-size: 20px; color: black; text-overflow: ellipsis ; overflow: hidden; white-space: nowrap;">
                    <%= location.location_name %>
                  </div>
                <% end %>
              </div>
            <% end %>
            <div class="" style="text-align: center; width: 100%;">
              <%= paginate @location_public, class:"paginate" %>
            </div>
          </div>
        </div>
        <div class="right col-sm-6" style="padding: 0px;">
          <div class="user_thing_index" style="margin-bottom: 20px; width: 350px; margin: 0 auto;">
            <div class="thing_title" style="">
              <p style="margin-bottom: 10px; font-size: 40px; text-align: center; text-shadow: 4px 4px 4px #000000; color: #ffd700; -webkit-text-stroke: 0.2px black;"><strong>Objects</strong></p>
            </div>
            <% @thing_public.each do |thing| %>
              <div class="user_thing" style="height: 60px; margin-bottom: 20px; box-shadow: 3px 3px 3px 3px rgba(0,0,0,0.6);">
                <%= link_to thing_path(thing.id), class:"" do %>
                  <div class="thing_image col-xs-2" style="padding-top: 5px; padding-bottom: 5px; padding-left: 15px;">
                    <%= attachment_image_tag thing, :thing_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_camera_medium.jpg", size: "50x50" %>
                  </div>
                  <div class="thing_name col-xs-10" style="height: 60px; padding-top: 15px; padding-bottom: 15px; padding-left: 20px; font-size: 20px; color: black; text-overflow: ellipsis ; overflow: hidden; white-space: nowrap;">
                    <%= thing.thing_name %>
                  </div>
                <% end %>
