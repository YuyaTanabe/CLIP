
<div class="user_profile well well-compact col-md-8 col-md-offset-2" style="margin-top: 40px; border-radius: 20px;">
  <div class="user_image col-md-5" style="margin-top: 20px; margin-bottom: 20px; padding-left: 40px; text-align: center;">
    <%= attachment_image_tag @user, :user_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "200x200" %>
  </div>
  <div class="user_detail col-md-7" style="margin-top: 10px; margin-bottom: 10px; font-size: 16px;">
    <div class="user_name" style="">
      <p style="margin-bottom: 4px;"><strong>・ユーザー名</strong></p>
      <p style=""><%= @user.user_name %></p>
    </div>
    <hr style="margin-top: 0px;">
    <div class="user_name" style="">
      <p style="margin-bottom: 4px;"><strong>・Eメールアドレス</strong></p>
      <p style=""><%= @user.email %></p>
    </div>
    <hr style="margin-top: 0px;">
    <div class="user_name" style="">
      <p style="margin-bottom: 4px;"><strong>・フレンドID</strong></p>
      <p style=""><%= @user.friend_id %></p>
    </div>
    <hr style="margin-top: 0px; margin-bottom: 0px;">
  </div>
</div>

<div class="user_thing_index col-md-4 col-md-offset-4" style="height: 60px; margin-bottom: 20px;">
  <div class="thing_title" style="">
    <p style="font-size: 40px; text-align: center"><strong>Object</strong></p>
  </div>
  <% @thing.each do |thing| %>
    <div class="user_thing" style="height: 60px; margin-bottom: 20px;">
      <%= link_to thing_path(thing.id), class:"" do %>
        <div class="thing_image col-md-3" style="margin-top: 4px; margin-bottom: 0px; padding-left: 20px;">
          <%= attachment_image_tag thing, :thing_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "50x50" %>
        </div>
        <div class="thing_name col-md-9" style="margin-top: 5px; margin-bottom: 0px; float: left; font-size: 30px; color: black;">
          <td><%= thing.thing_name %></td>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

