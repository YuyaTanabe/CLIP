
<% if @location.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @location.errors.count %>件のエラーが発生しました。</h3>
      <ul>
        <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<p style="font-size: 40px; text-align: center; margin-top: 40px; text-shadow: 4px 4px 4px #000000; color: #00bfff; -webkit-text-stroke: 0.2px black" class="col-md-6 col-md-offset-3"><strong> Clip location</strong></p>
<div class="well well-compact col-md-6 col-md-offset-3" style="margin-top: 15px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.8 );">
  <%= form_for @location do |f| %>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :名前 %>
      <%= f.text_field :location_name, class:"form-control" %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :画像 %>
      <%= f.attachment_field :location_image, placeholder: "イメージ画像を選択" %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :最寄駅 %>
      <%= f.text_field :station, class:"form-control"  %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :関連 %><strong>URL</strong>
      <%= f.text_field :location_url, class:"form-control"  %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :メモ %><strong> （2000文字まで入力できます。）</strong>
      <%= f.text_area :location_memo, class:"form-control", size:"30x6"  %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :地図登録したい地名 %>
      <%= f.text_field :address, placeholder: "記入例　東京スカイツリー", class:"form-control"  %>
    </div>

    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <div class="col-md-6" style="text-align: center">
        <%= f.radio_button :public_status, :公開しない, checked: "checked" %>
        <%= f.label :公開しない, class: "job_type_label" %>
      </div>
      <div class="col-md-6" style="text-align: center">
        <%= f.radio_button :public_status, :公開する %>
        <%= f.label :公開する, class: "job_type_label" %>
      </div>
    </div>

    <div class="actions" style="text-align: center; margin-bottom: 20px;">
      <%= f.submit '      Clip      ', class:"btn-lg btn-primary" %>
    </div>
  <% end %>
</div>