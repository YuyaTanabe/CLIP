
<% if @thing.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @thing.errors.count %>件のエラーが発生しました。</h3>
    <ul>
      <% @thing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-12 clip_thing_form">
  <div class="well well-compact col-md-6 col-md-offset-3" style="box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.8 );">
    <%= form_for @thing do |f| %>
      <div class="col-md-12" style="margin-bottom: 10px; font-size: 40px; text-align: center; text-shadow: 1px 1px 1px #000000; color: #ffd700; -webkit-text-stroke: 0.2px black;">
        <strong>Clip object</strong>
      </div>
      <div class="field col-sm-10 col-sm-offset-1" style="margin-bottom: 30px;">
        <%= f.label :名前 %>
        <%= f.text_field :thing_name, class:"form-control" %>
      </div>
      <div class="field col-sm-10 col-sm-offset-1" style="margin-bottom: 30px;">
        <%= f.label :画像 %>
        <%= f.attachment_field :thing_image, placeholder: "イメージ画像を選択" %>
      </div>
      <div class="field col-sm-10 col-sm-offset-1" style="margin-bottom: 30px;">
        <%= f.label :関連 %><strong>URL</strong>
        <%= f.text_field :thing_url, class:"form-control"  %>
      </div>
      <div class="field col-sm-10 col-sm-offset-1" style="margin-bottom: 30px;">
        <%= f.label :メモ %><strong> （2000文字まで入力できます。）</strong>
        <%= f.text_area :thing_memo, class:"form-control", size:"30x6"  %>
      </div>
      <div class="field col-xs-10 col-xs-offset-1" style="margin-bottom: 30px;">
        <div class="col-xs-6" style="text-align: center">
          <%= f.radio_button :public_status, :公開しない, checked: "checked" %>
          <%= f.label :公開しない, class: "job_type_label" %>
        </div>
        <div class="col-xs-6" style="text-align: center">
          <%= f.radio_button :public_status, :公開する %>
          <%= f.label :公開する, class: "job_type_label" %>
        </div>
      </div>
      <div class="actions" style="text-align: center; margin-bottom: 20px;">
        <%= f.submit '      Clip      ', class:"btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>


