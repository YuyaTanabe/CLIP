
<!-- ページ最下部へ移動するボタン -->
<p id="pageBottom"><a href="#"><i class="fa fa-chevron-down"></i></a></p>

<div class="admin_user_index col-md-4 col-md-offset-4" style="margin-top: 30px; margin-bottom: 20px;">
  <div class="title" style="">
    <p style="font-size: 40px; text-align: center; text-shadow: 4px 4px 4px #000000; color: #98fb98; -webkit-text-stroke: 0.2px black;"><strong>Users</strong></p>
  </div>
  <% @users.each do |user| %>
    <div class="user_index" style="height: 60px; margin-bottom: 20px; box-shadow: 4px 4px 4px 4px rgba(0,0,0,0.6);">
      <%= link_to admins_user_path(user.id), class:"" do %>
        <div class="user_image col-md-2" style="padding-top: 4px; padding-bottom: 4px; padding-left: 20px;">
          <%= attachment_image_tag user, :user_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "50x50" %>
        </div>
        <div class="user_name col-md-10" style="height: 60px; padding-top: 15px; padding-bottom: 15px; padding-left: 20px; float: left; font-size: 20px; color: black;">
          <%= user.user_name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>