
<!-- ページ最下部へ移動するボタン -->
<p id="pageBottom"><a href="#"><i class="fa fa-chevron-down"></i></a></p>

<div class="admin_location_index col-md-4 col-md-offset-4" style="margin-top: 30px; margin-bottom: 20px;">
  <div class="title" style="font-size: 40px; text-align: center; text-shadow: 4px 4px 4px #000000; color: #00bfff; -webkit-text-stroke: 0.2px black;">
    <strong>Locations</strong>
  </div>
  <% @locations.each do |location| %>
    <div class="location_index" style="height: 60px; margin-bottom: 20px; box-shadow: 4px 4px 4px 4px rgba(0,0,0,0.6);">
      <%= link_to admins_location_path(location.id), class:"" do %>
        <div class="location_image col-md-2" style="padding-top: 4px; padding-bottom: 4px; padding-left: 20px;">
          <%= attachment_image_tag location, :location_image,　format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_camera_medium.jpg", size: "50x50" %>
        </div>
        <div class="location_name col-md-10" style="height: 60px; padding-top: 15px; padding-bottom: 15px; padding-left: 20px; float: left; font-size: 20px; color: black;">
          <%= location.location_name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>