
<% if @thing.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @thing.errors.count %>件のエラーが発生しました。</h3>
    <ul>
      <% @thing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p style="font-size: 40px; text-align: center; margin-top: 40px; text-shadow: 4px 4px 4px #000000; color: #ffd700; -webkit-text-stroke: 0.2px black;" class="col-md-6 col-md-offset-3"><strong>Edit object</strong><p>
<div class="well well-compact col-md-6 col-md-offset-3" style="margin-top: 15px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.8 );">
  <%= form_for @thing, url: admins_thing_path do |f| %>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :名前 %>
      <%= f.text_field :thing_name, class:"form-control" %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <div class="field col-md-7" style="margin-bottom: 0px; padding: 0px;">
        <%= f.label :画像 %>
        <%= f.attachment_field :thing_image, placeholder: "イメージ画像を選択" %>
      </div>
      <div class="field col-md-5" style="margin-bottom: 0px;">
        ↓↓ <%= f.label :変更前の画像 %> ↓↓
        <div style="margin-bottom: 0px; padding-left: 30px;">
          <%= attachment_image_tag @thing, :thing_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_camera_medium.jpg", size: "60x60" %>
        </div>
      </div>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :関連 %><strong>URL</strong>
      <%= f.text_field :thing_url, class:"form-control"  %>
    </div>
    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <%= f.label :メモ %><strong> （2000文字まで入力できます。）</strong>
      <%= f.text_area :thing_memo, class:"form-control", size:"30x6" %>
    </div>

    <div class="field col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
      <div class="col-md-6" style="text-align: center">
        <%= f.radio_button :public_status, :公開しない, checked: "checked" %>
        <%= f.label :公開しない, class: "" %>
      </div>
      <div class="col-md-6" style="text-align: center">
        <%= f.radio_button :public_status, :公開する %>
        <%= f.label :公開する, class: "" %>
      </div>
    </div>

    <div class="actions" style="text-align: center; margin-bottom: 20px;">
      <%= f.submit '      変更を保存      ', "data-confirm" => "管理者権限で、本当に編集しますか?", class:"btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
