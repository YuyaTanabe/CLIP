
<% if @admin.errors.any? %>
  <div id="error_explanation" class="well well-compact col-md-4 col-md-offset-4" >
    <h3><%= @admin.errors.count %>件のエラーが発生しました。</h3>
    <ul>
        <% @admin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class="well well-compact col-md-4 col-md-offset-4" style="margin-top: 40px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.7 );">
<h2 style="margin-top: 10px; text-align: center; margin-bottom: 30px;"><strong>管理者アカウント登録</strong></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :管理者名 %><br />
      <%= f.text_field :admin_name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :Eメールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="actions" style="margin-bottom: 20px;">
      <%= f.submit "管理者アカウント登録", class:"btn btn-danger col-md-12" %>
    </div>
  <% end %>

</div>