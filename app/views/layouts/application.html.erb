<!DOCTYPE html>
<html>
  <head>
    <title>CLIP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse" style="background-color: rgba( 10, 10, 10, 0.8 );">
      <div class="container">
        <nav class='nav navbar-nav navbar-left' >
          <h3 style="margin-top: 13px; margin-bottom: 14px;"><span>CLIP</span></h3>
        </nav>
          <% if user_signed_in? %>
            <nav class='nav navbar-nav' >
              <h4 style="margin-top: 19px; margin-bottom: 14px; margin-left: 50px; color: orange;"><span><%= current_user.user_name %> ID <%= current_user.id %></span></h4>
            </nav>
          <% elsif admin_signed_in? %>
            <nav class='nav navbar-nav' >
              <h4 style="margin-top: 19px; margin-bottom: 14px; margin-left: 50px; color: red;"><span>管理者　ID <%= current_admin.id %></span></h4>
            </nav>
          <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to " マイページ", user_path(current_user.id), class: "nav_menu home" %></li>
              <li><%= link_to " クリップ", users_clip_path, class: "nav_menu clip" %></li>
              <li><%= link_to ' フレンド', friendships_path, class: "nav_menu friends" %></li>
              <li><%= link_to " フレンド追加", new_friendship_path, class: "nav_menu invite" %></li>
              <li><%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "nav_menu logout" %></li>
            <% elsif admin_signed_in? %>
              <li><%= link_to " 管理者トップ", admins_top_path, class: "nav_menu admin" %></li>
              <li><%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "nav_menu logout" %></li>
            <% else %>
              <li><%= link_to " ホーム", root_path, class: "nav_menu home" %></li>
              <li><%= link_to " アカウント登録", new_user_registration_path, class: "nav_menu sign_up" %></li>
              <li><%= link_to " ログイン", new_user_session_path, class: "nav_menu sign_in" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>


    <div class='main'>
      <div class='container'>
        <div class='row'>

      <% if notice %>
        <p class="validation alert alert-success col-xs-6 col-xs-offset-3" style="text-align: center; margin-top: 20px; margin-bottom: 0px;" ><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="validation alert alert-danger col-xs-6 col-xs-offset-3" style="text-align: center; margin-top: 20px; margin-bottom: 0px;" ><%= alert %></p>
      <% end %>

          <%= yield %>
          <!-- ページトップへ移動するボタン -->
          <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>
        </div>
      </div>
    </div>

    <footer class="navbar navbar-fixed-bottom navbar-inverse" style="background-color: rgba( 10, 10, 10, 0.8 );">
      <div class='container'>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to " 問い合わせ", inquiries_index_path, class: "nav_menu inquiry" %></li>
            <% elsif admin_signed_in? %>
            <% else %>
              <li><%= link_to " 問い合わせ", inquiries_index_path, class: "nav_menu inquiry" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </footer>

  </body>
</html>
