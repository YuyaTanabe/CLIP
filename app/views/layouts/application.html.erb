<!DOCTYPE html>
<html>
  <head>
    <title>CLIP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="pagecover">
      <div id="header">
        <header class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgba( 10, 10, 10, 0.8 );">
          <!-- <div class="container"> -->
            <% if user_signed_in? %>
              <div class="navbar-header">
                <%= image_tag '/images/clip_logo.png',class: "navbar-brand", :size =>"250x50", style:"padding: 0px;" %>
                <div class="navbar-brand" style="padding: 0; height: 40px;">
                  <%= attachment_image_tag current_user, :user_image, class: "img-circle pull-left profile-img", fallback: "/images/no_image.jpg", size: "50x50", style:"margin: 0px 0px 0px 10px; border-radius: 2px;" %>
                </div>
                <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                </button>
              </div>
              <div class="collapse navbar-collapse target">
                <ul class="nav navbar-nav navbar-right" style="margin-right: 10px;" >
                  <li><%= link_to " マイページ", user_path(current_user.id), class: "nav_menu home", style:"" %></li>
                  <li><%= link_to " クリップ", users_clip_path, class: "nav_menu clip", style:"padding: 15px 10px;" %></li>
                  <li><%= link_to ' フレンド', friendships_path, class: "nav_menu friends", style:"padding: 15px 10px;" %></li>
                  <li><%= link_to " フレンド追加", new_friendship_path, class: "nav_menu invite", style:"padding: 15px 10px;" %></li>
                  <li><%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "nav_menu logout", style:"padding: 15px 10px;" %></li>
                </ul>
              </div>
            <% elsif admin_signed_in? %>
              <div class="navbar-header">
                <%= image_tag '/images/clip_logo.png',class: "navbar-brand", :size =>"250x50", style:"padding: 0px;" %>
                <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                </button>
              </div>
              <div class="collapse navbar-collapse target">
                <ul class="nav navbar-nav navbar-right" style="margin-right: 10px;">
                  <li><%= link_to " 管理者トップ", admins_top_path, class: "nav_menu admin" %></li>
                  <li><%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "nav_menu logout" %></li>
                </ul>
              </div>

            <% else %>
              <div class="navbar-header">
                <%= image_tag '/images/clip_logo.png',class: "navbar-brand", :size =>"250x50", style:"padding: 0px;" %>
                <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                </button>
              </div>
              <div class="collapse navbar-collapse target">
                <ul class="nav navbar-nav navbar-right" style="margin-right: 10px;">
                  <li><%= link_to " ホーム", root_path, class: "nav_menu home", style:"padding: 15px 10px;" %></li>
                  <li><%= link_to " アカウント登録", new_user_registration_path, class: "nav_menu sign_up", style:"padding: 15px 10px;" %></li>
                  <li><%= link_to " ログイン", new_user_session_path, class: "nav_menu sign_in", style:"padding: 15px 10px;" %></li>
                </ul>
              </div>
            <% end %>
          <!-- </div> -->
        </header>
      </div>
      <div id="contents">
        <div class='container'>
          <div class='row'>
            <% if notice %>
              <span class="flash alert alert-success col-xs-12"><%= notice %>
              </span>
            <% end %>
            <% if alert %>
              <span class="flash alert alert-danger col-xs-12"><%= alert %>
              </span>
            <% end %>
            <%= yield %>
            <!-- ページトップへ移動するボタン -->
            <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>
          </div>
        </div>
      </div>
      <div id="footer">
        <footer class="nav_footer navbar navbar-inverse" style="background-color: rgba( 10, 10, 10, 0.8 );">
          <div class='container'>
            <nav>
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                  <li><%= link_to " 問い合わせ", inquiries_index_path, class: "nav_menu inquiry" %></li>
                <% elsif admin_signed_in? %>
                <% else %>
                  <li><%= link_to " 問い合わせ", inquiries_index_path, class: "nav_menu inquiry" %></li>
                <% end %>
              </ul>
            </nav>
          </div>
        </footer>
      </div>
   </div>
  </body>
</html>



<style type="text/css">
.nav_image {
  padding-top: 0px;
  padding-left: 10px;
}
.nav_menu.home {
  padding: 15px 15px 15px 0px;
}

@media screen and (max-width:768px) {
  .nav_image {
    margin-top: 0px;
  }
  .nav_menu.home {
  padding: 15px 10px;
  }
}
</style>


