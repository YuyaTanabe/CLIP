
<div class="user_friendship_index col-md-4 col-md-offset-4" style="margin-top: 60px; margin-bottom: 20px;">
  <div class="title" style="">
    <p style="font-size: 40px; text-align: center"><strong>Friends</strong></p>
  </div>
  <% @friendship.each do |friendship| %>
    <% to_user = User.find(friendship.to_user_id) %>
    <div class="user_friend" style="height: 60px; margin-bottom: 20px; box-shadow: 4px 4px 4px 4px rgba(0,0,0,0.6);">
      <%= link_to user_path(to_user.id), class:"" do %>
        <div class="friend_image col-md-2" style="padding-top: 4px; padding-bottom: 4px; padding-left: 20px;">
          <%= attachment_image_tag to_user, :user_image,ã€€format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "50x50" %>
        </div>
        <div class="friend_name col-md-10" style="padding-top: 15px; padding-bottom: 15px; padding-left: 20px; float: left; font-size: 20px; color: black;">
          <%= to_user.user_name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

