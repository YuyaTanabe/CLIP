<div class="well well-compact col-md-6 col-md-offset-3" style="margin-top: 150px; border-radius: 20px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.8 );">
  <%= form_for(@friendship) do |f| %>
    <div class="field col-md-10 col-md-offset-1" style="margin-top: 20px; margin-bottom: 30px;">
      <%= f.label :フレンド %><strong>ID</strong>
      <%= f.text_field :to_friend_id, placeholder: "フレンドになりたいユーザーのフレンドIDを入力してください", class:"form-control" %>
    </div>
    <div class="actions" style="text-align: center; margin-bottom: 20px;">
      <%= f.submit '      フレンドになる      ', class:"btn-lg btn-primary" %>
    </div>
  <% end %>
</div>

