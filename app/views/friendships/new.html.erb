
<div class="friendship_form col-xs-12">
  <div class="well well-compact col-md-6 col-md-offset-3" style="border-radius: 20px; box-shadow: 5px 5px 5px 5px rgba(0,0,0,0.7); background-color: rgba( 245, 245, 245, 0.8 );">
    <%= form_for(@friendship) do |f| %>
      <div class="col-md-12" style="margin-bottom: 10px; font-size: 30px; text-align: center; text-shadow: -webkit-text-stroke: 0.2px black;">
        <strong>フレンド追加</strong>
      </div>
      <div class="field col-xs-12" style="margin-top: 20px; margin-bottom: 30px;">
        <%= f.label :フレンド %><strong>ID</strong>
        <%= f.text_field :to_friend_id, placeholder: "フレンドIDを入力してください", class:"form-control" %>
      </div>
      <div class="actions" style="text-align: center; margin-bottom: 20px;">
        <%= f.submit '      フレンドになる      ', style:"box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.7);", class:"btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

